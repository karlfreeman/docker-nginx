server {
  root /var/www;
  index index.html index.htm;

  server_name localhost;

  location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
    expires 1d;
  }

  location / {
    try_files $uri $uri/ @rewrite;
  }

  location ~ \.html$ {
    try_files $uri =404;
  }

  location @rewrite {
    rewrite ^(.*)$ $1.html;
  }
}
