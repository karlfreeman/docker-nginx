server {
  listen 443;

  root /var/www;
  index index.html index.htm;

  ssl on;
  ssl_certificate /etc/nginx/ssl/server.crt;
  ssl_certificate_key /etc/nginx/ssl/server.key;

  location ~* \.(js|css|png|jpg|jpeg|gif|ico)$ {
    expires 1d;
  }

  location / {
    try_files $uri $uri/ @rewrite;
  }

  location ~ \.html$ {
    try_files $uri =404;
  }

  location @rewrite {
    rewrite ^(.*)$ $1.html;
  }
}
